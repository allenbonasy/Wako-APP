<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:padding="5dp"
        android:stretchColumns="2">

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="To"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPostToCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:gravity="start"
                android:hint="City"
                android:inputType="textCapSentences"
                android:padding="5dip"
                android:textColor="@color/textColorDark" />

            <EditText
                android:id="@+id/etPostToSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:gravity="start"
                android:hint="Surburb"
                android:inputType="textCapSentences"
                android:padding="5dip"
                android:textColor="@color/textColorDark" />

        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="From"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPostFromCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:gravity="start"
                android:hint="City"
                android:inputType="textCapSentences"
                android:padding="5dip"
                android:textColor="@color/textColorDark" />

            <EditText
                android:id="@+id/etPostFromSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/border"
                android:gravity="start"
                android:hint="Surburb"
                android:inputType="textCapSentences"
                android:padding="5dip"
                android:textColor="@color/textColorDark" />
        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Weight"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/size_spinner"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border"

                android:entries="@array/size"
                android:gravity="start"
                android:maxLength="4"
                android:maxLines="1"
                android:padding="5dip" />

        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Fragile"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/fragility"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border"
                android:gravity="start"
                android:max="10"
                android:layout_width="match_parent"
                android:layout_weight="1"

                android:padding="5dip" />
        </TableRow>

        <TableRow android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:text="Fee"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPropFee"

                android:layout_marginLeft="10dp"
                android:background="@drawable/border"
                android:gravity="start"
                android:inputType="numberDecimal"
                android:maxLength="4"
                android:maxLines="1"
                android:padding="5dip"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/textColorDark" />
        </TableRow>
    </TableLayout>


</LinearLayout>